#!/bin/bash

WALLPAPER_DIR="/home/$USER/Pictures/Wallpapers"

# Drun menu for wallpapers
SELECTED=$(find "$WALLPAPER_DIR" -type f \( -iname '*.jpg' -o -iname '*.png' -o -iname '*.jpeg' \) | rofi -dmenu -p "Wallpaper")

if [ -n "$SELECTED" ]; then
    hyprctl hyprpaper reload ,"$SELECTED";
    wal -i "$SELECTED"

	printf "preload = \"$SELECTED\"\nwallpaper = ,\"$SELECTED\"" > /home/seal/.config/hypr/hyprpaper.conf
fi
