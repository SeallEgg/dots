@import "colors.rasi"

* {
	background-color: transparent; 
	vertical-align: 0.5;
	font: "SF Pro Display 16";
	text-color: @on-surface; 
}

window {
	border-radius: 20px;
	width: 600;
}

inputbar {
	padding: 12;
	background-color: @surface-container;
}

prompt { 
	text-color: @primary;
	background-color: @on-primary;
	border-radius: 12px;
	margin: 0 6 0 0;
	padding: 8 10;
	font: "SF Pro Rounded Bold 20";
}

listview {
	background-color: @surface-trans;
	fixed-height: false;
	lines: 6;
}

element {
	padding: 10 18;
}

element-icon {
	size: 2em;
}

element-text{
	margin: 0 8;
	text-color: inherit;
}

element selected{
	background-color: @primary;
	text-color: @surface-container;
}
